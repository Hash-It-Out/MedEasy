<!doctype html>
<html lang="en">
  <head>
    <title>MedEasy</title>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../assests/shop.css">
    
    <style type:"text/css">

.price{
	padding-top: 5px;
	padding-left: 7px;
}

.product-text{
	font-family:verdana;
	font-size: 20px;
}
.add-item{
	text-align: center;		
}

.card-title{
	text-align: center;

}

.card-image:nth-child(even){
	border: none;
	border-width: none;
	background: rgb(131,58,180);
	background: linear-gradient(90deg, rgba(131,58,180,1) 0%, rgba(253,29,29,1) 50%, rgba(252,176,69,1) 100%);
}

.card-image:nth-child(odd){
	border: none;
	border-width: none;
	background: rgb(63,94,251);
	background: radial-gradient(circle, rgba(63,94,251,1) 0%, rgba(252,70,107,1) 100%);
}



      
    </style>
  </head>

  <body>
    <%- include("nav") %>
    <div class="container-fluid">
        <div class="row">
            <% for(var i in items){ %>
            
            <div class="col m2">
              
                    <div class="card">
                      <div class="card-image activator">
                          <div class="price">
                            
                          <a href="#" class="btn-floating btn-large btn-price waves-effect waves-light teal accent-4"><%= items[i]["cost"] %></a>
                        </div>
                          <img  src="https://2.imimg.com/data2/GX/KQ/IMVENDOR-3111145/assets-images-en-us-products-primaryproductimg-img_p_nf_cough_a-250x250.png" style="max-width: 100%;">
                      
                      
                            <div class="add-item">
                                  <a class=" btn-floating waves-effect waves-light cyan" ><i class="material-icons">add_shopping_cart</i></a>

                                  <a class=" activator  btn-floating waves-effect waves-light deep-orange"><i class="material-icons">info_outline</i></a>

                                  <a href="http://localhost:3000/shop/product/<%= items[i]['_id']%>" class="btn-floating waves-effect waves-light deep-blue"><i class="material-icons">visibility</i></a>
                            </div>
                     
                      
                          <div class="card-content">
                            <p align="center" class="product-text white-text"><b><%= items[i]["name"] %></b></p>
                          </div>
                      
                      </div>
                      <div class="card-reveal waves-effect waves-light deep-orange">
                      <span class="card-title white-text text-darken-4"><%= items[i]["name"] %><i class="material-icons right">close</i></span>
                      <p style="font-size: 20px;" class="white-text text-darken-4">Crocin is a tablet.<br>Preferred for Headache,pain relief.</p>
                    </div>
                    </div>

                         
            </div>
            <% } %>

                                   
        </div>
    </div>
  </body>


</html>